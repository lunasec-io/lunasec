{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build/typescript",
    "rootDir": "src",
    "tsBuildInfoFile": "./build/buildcache.tsbuildinfo",

    "lib": ["es2017", "dom"],
    "types": ["node"],

    /* Disable inlined source maps for static JS bundle */
    "sourceMap": true,
    "inlineSourceMap": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [
    { "path": "../browser-common" },
    { "path": "../js-sdk" }
  ],
  "compileOnSave": true
}
