{
  "name": "lunasec-mono-repo",
  "private": true,
  "scripts": {
    "clean": "rimraf \"packages/**/build\"",
    "compile": "tsc -b tsconfig.build.json",
    "compile:secure-frame-static-js-sdk": "cd packages/secure-frame/static-js-sdk && npm run build",
    "prettier": "prettier \"*.{js,json,yml,md}\" \"packages/**/*\"",
    "format": "npm run lint -- --fix",
    "format:check": "npm run lint",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./packages",
    "test": "lerna run test",
    "prepare": "npm run compile",
    "watch": "tsc -b tsconfig.build.json -w"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-order": "^2.1.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.3"
  },
  "workspaces": [
    "packages/*",
    "packages/secure-frame/*"
  ],
  "dependencies": {
    "@lunasec/common": "file:packages/common",
    "@lunasec/secure-frame-common": "file:packages/secure-frame/common",
    "@lunasec/secure-frame-js-sdk": "file:packages/secure-frame/js-sdk",
    "lint-staged": "^10.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix "
    ]
  }
}
