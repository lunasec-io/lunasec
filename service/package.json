{
  "name": "lunasec-service-repo",
  "private": true,
  "scripts": {
    "clean": "rimraf \"packages/**/build\" \"packages/**/buildcache\" \"packages/browser/public\"",
    "compile": "tsc -b tsconfig.build.json && cd packages/browser && npm run compile",
    "compile:production": "npm run clean && NODE_ENV=production npm run compile",
    "prettier": "prettier \"*.{js,json,yml,md}\" \"packages/**/*\"",
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- --check",
    "lint": "npm run format:check",
    "test": "lerna run test",
    "prepare": "npm run compile",
    "watch": "tsc -b tsconfig.build.json -w"
  },
  "dependencies": {
    "@lunasec/secure-frame-common": "file:../sdks/packages/secure-frame/common",
    "@lunasec/services-common": "file:services/common",
    "@lunasec/tokenizer-sdk": "file:../sdks/packages/tokenizer-sdk"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
