{
  "name": "lunatrace-backend-cdk",
  "license": "BSL-LunaTrace",
  "version": "0.1.0",
  "bin": "bin/lunatrace-backend.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:deploy:dev": "DEVELOPMENT=true DEV_USER=$USER cdk deploy --all",
    "cdk:deploy:prod:all": "DATADOG_API_KEY=$(aws secretsmanager get-secret-value --secret-id lunatrace-DatadogAPIKey | jq -r .SecretString) cdk deploy --all",
    "cdk:deploy:prod:cleanup": "rm cdk.out/*.tar || true",
    "cdk:deploy:prod": "echo 'deploying...' && yarn run cdk:deploy:prod:cleanup && ./build-containers.sh && yarn run cdk:deploy:prod:all && yarn run hasura:metadata:reload",
    "hasura:metadata:reload": "cd ../hasura && HASURA_GRAPHQL_ENDPOINT=https://lunatrace.lunasec.io/api/hasura HASURA_GRAPHQL_ADMIN_SECRET=\"$(aws secretsmanager get-secret-value --secret-id lunatrace-HasuraAdminSecret | jq -r .SecretString)\" hasura metadata reload"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.156.1",
    "@aws-cdk/assets": "1.156.1",
    "@aws-cdk/aws-apigateway": "1.156.1",
    "@aws-cdk/aws-certificatemanager": "1.156.1",
    "@aws-cdk/aws-ec2": "1.156.1",
    "@aws-cdk/aws-ecr-assets": "1.156.1",
    "@aws-cdk/aws-ecs": "1.156.1",
    "@aws-cdk/aws-ecs-patterns": "1.156.1",
    "@aws-cdk/aws-elasticloadbalancingv2": "1.156.1",
    "@aws-cdk/aws-events": "1.156.1",
    "@aws-cdk/aws-iam": "1.156.1",
    "@aws-cdk/aws-lambda": "1.156.1",
    "@aws-cdk/aws-lambda-nodejs": "1.156.1",
    "@aws-cdk/aws-rds": "1.156.1",
    "@aws-cdk/aws-route53": "1.156.1",
    "@aws-cdk/aws-route53-targets": "1.156.1",
    "@aws-cdk/aws-s3": "1.156.1",
    "@aws-cdk/aws-s3-deployment": "1.156.1",
    "@aws-cdk/aws-s3-notifications": "1.156.1",
    "@aws-cdk/aws-secretsmanager": "1.156.1",
    "@aws-cdk/aws-sqs": "1.156.1",
    "@aws-cdk/aws-ssm": "1.156.1",
    "@aws-cdk/core": "1.156.1",
    "@aws-sdk/types": "^3.22.0",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.0.0",
    "aws-cdk": "2.33.0",
    "aws-sdk": "^2.1068.0",
    "jest": "^26.4.2",
    "source-map-support": "^0.5.16",
    "ts-jest": "^26.2.0",
    "ts-node": "^10.4.0",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "@aws-cdk/aws-servicediscovery": "~1.163.0",
    "@aws-cdk/cx-api": "~2.33.0"
  }
}
